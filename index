    <script>
// تبديل الوضع الداكن/الفاتح
const themeToggle = document.getElementById('themeToggle');
const body = document.body;

// التحقق من تفضيلات النظام
const prefersDarkScheme = window.matchMedia('(prefers-color-scheme: dark)');

// الأيقونات - استبدلها بأيقوناتك المفضلة
const darkIcon = '<i class="fas fa-sun"></i>'; // أيقونة الوضع الداكن
const lightIcon = '<i class="fas fa-moon"></i>'; // أيقونة الوضع الفاتح

// تعيين الوضع الأولي
function initTheme() {
    // الأولوية للتفضيل المحفوظ في localStorage
    const savedMode = localStorage.getItem('darkMode');
    
    if (savedMode !== null) {
        if (savedMode === 'true') {
            body.classList.add('dark-mode');
            themeToggle.innerHTML = lightIcon;
        } else {
            body.classList.remove('dark-mode');
            themeToggle.innerHTML = darkIcon;
        }
    } else {
        // إذا لم يكن هناك تفضيل محفوظ، استخدم تفضيلات النظام
        if (prefersDarkScheme.matches) {
            body.classList.add('dark-mode');
            themeToggle.innerHTML = lightIcon;
            localStorage.setItem('darkMode', 'true');
        } else {
            body.classList.remove('dark-mode');
            themeToggle.innerHTML = darkIcon;
            localStorage.setItem('darkMode', 'false');
        }
    }
}

// تطبيق الثيم عند التحميل
initTheme();

// حدث النقر على زر التبديل
themeToggle.addEventListener('click', () => {
    body.classList.toggle('dark-mode');
    
    const isDark = body.classList.contains('dark-mode');
    themeToggle.innerHTML = isDark ? lightIcon : darkIcon;
    
    // حفظ التفضيل في localStorage
    localStorage.setItem('darkMode', isDark);
});

// تحديث الوضع عند تغيير تفضيلات النظام (فقط إذا لم يكن هناك تفضيل محفوظ)
prefersDarkScheme.addListener(e => {
    if (localStorage.getItem('darkMode') === null) {
        if (e.matches) {
            body.classList.add('dark-mode');
            themeToggle.innerHTML = lightIcon;
            localStorage.setItem('darkMode', 'true');
        } else {
            body.classList.remove('dark-mode');
            themeToggle.innerHTML = darkIcon;
            localStorage.setItem('darkMode', 'false');
        }
    }
});
    </script>
